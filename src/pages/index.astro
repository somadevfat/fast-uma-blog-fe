---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);

const projects = (await getCollection('portfolio')).sort(
  (a, b) => a.data.sortOrder - b.data.sortOrder
).slice(0, 3);
---

<BaseLayout title="Fast Uma Blog">
  <section class="py-20 text-center">
    <h1 class="text-6xl font-black text-gray-900 mb-6 tracking-tight">
      Build Faster. <span class="text-blue-600">Ship Faster.</span>
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-10">
      A personal playground for exploring high-performance web technologies.
      Powered by Astro, Bun, ElysiaJS, and Cloud Run.
    </p>
    <div class="flex justify-center gap-4">
      <a href="/blog" class="px-8 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition">Read Blog</a>
      <a href="/portfolio" class="px-8 py-3 bg-gray-100 text-gray-900 font-bold rounded-lg hover:bg-gray-200 transition">View Work</a>
    </div>
  </section>

  <section class="py-12">
    <div class="flex justify-between items-end mb-8">
      <h2 class="text-3xl font-bold">Latest Posts</h2>
      <a href="/blog" class="text-blue-600 font-medium hover:underline">View all &rarr;</a>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="group">
          <article class="bg-white border border-gray-100 rounded-xl shadow-sm hover:shadow-md transition p-6 h-full flex flex-col">
            <h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition">{post.data.title}</h3>
            <p class="text-gray-500 text-sm mb-4 line-clamp-2">{post.data.description}</p>
            <div class="mt-auto text-xs text-gray-400">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString()}
              </time>
            </div>
          </article>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>