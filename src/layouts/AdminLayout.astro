---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Fast Uma Wiki Admin</title>
	</head>
	<body class="bg-gray-100 min-h-screen">
		<header
			class="bg-gray-900 text-white border-b border-gray-700 h-14 flex items-center px-6 justify-between sticky top-0 z-50"
		>
			<div class="flex items-center gap-4">
				<a href="/admin" class="font-bold flex items-center gap-2">
					<span
						class="bg-primary text-white px-2 py-0.5 rounded text-xs italic"
						>A</span
					>
					Fast Uma Admin
				</a>
			</div>
			<div
				class="flex items-center gap-6 text-xs uppercase tracking-widest font-bold"
			>
				<a
					href="/"
					class="text-gray-400 hover:text-white transition-colors"
					>View Site</a
				>
				<div class="h-4 w-px bg-gray-700"></div>
				<div class="flex items-center gap-2">
					<div class="w-2 h-2 rounded-full bg-green-500"></div>
					<span class="text-gray-500">System Online</span>
				</div>
			</div>
		</header>

		<div class="flex flex-col md:flex-row min-h-[calc(100vh-3.5rem)]">
			<!-- Admin Sidebar -->
			<aside
				class="w-full md:w-64 bg-gray-50 border-r border-wiki-border p-6 shrink-0"
			>
				<div class="sidebar-box !bg-white">
					<div class="sidebar-title">管理メニュー</div>
					<ul class="space-y-2 text-sm">
						<li>
							<a
								href="/admin"
								class="flex items-center gap-2 font-medium"
								><span class="opacity-30">■</span> ダッシュボード</a>
						</li>
						<li>
							<a
								href="/admin/posts"
								class="flex items-center gap-2 font-medium"
								><span class="opacity-30">■</span> 記事管理</a>
						</li>
						<li>
							<a
								href="/admin/portfolio"
								class="flex items-center gap-2 font-medium"
								><span class="opacity-30">■</span> ポートフォリオ管理</a>
						</li>
					</ul>
				</div>

				<div class="sidebar-box !bg-white">
					<div class="sidebar-title">システム設定</div>
					<ul class="space-y-2 text-sm text-gray-500">
						<li>設定 (Coming Soon)</li>
						<li>ユーザー管理 (Coming Soon)</li>
					</ul>
				</div>
			</aside>

			<!-- Admin Main -->
			<main class="flex-grow p-8 md:p-12">
				<div class="max-w-5xl mx-auto">
					<nav class="breadcrumbs">
						Admin &gt; {title}
					</nav>
					<slot />
				</div>
			</main>
		</div>

		<footer
			class="bg-white border-t border-wiki-border py-4 px-8 text-center text-[10px] text-gray-400 font-bold uppercase tracking-widest"
		>
			&copy; {new Date().getFullYear()} Fast Uma Wiki Admin Tools &mdash; Astro
			+ Elysia CMS
		</footer>
	</body>
</html>
